# PufferPhish API Environment Variables (Local Development)
# Copy this file to .env and fill in your values

# Database (Supabase)
# Use connection pooler for external access (Supabase Dashboard > Settings > Database > Connection Pooling)
# Format: postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true

# AWS Cognito (Optional - can use Supabase Auth instead)
USER_POOL_ID=us-east-1_XXXXXXXXX
USER_POOL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX

# AWS Region
AWS_REGION=us-east-1

# Server Configuration
PORT=3001
NODE_ENV=development
