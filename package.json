{
  "name": "pufferphish",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:extension": "turbo run dev --filter=@pufferphish/extension",
    "dev:dashboard": "turbo run dev --filter=@pufferphish/dashboard",
    "dev:api": "turbo run dev --filter=@pufferphish/api",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:studio": "cd packages/database && npx prisma studio",
    "db:push": "cd packages/database && npx prisma db push",
    "db:seed": "cd packages/database && npx prisma db seed",
    "deploy:dev": "cd infrastructure && npm run cdk deploy --all",
    "deploy:prod": "cd infrastructure && npm run cdk deploy --all --context environment=production"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}